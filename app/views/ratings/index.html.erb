<p id="notice"></p>
<h2>Ratings</h2>

<div class="row">
  <div class="col-sm-4">
    <p class="h5">Top-3 Breweries</p>
  </div>
  <div class="col-sm-4">
    <p class="h5">Top-3 Beers</p>
  </div>
  <div class="col-sm-4">
    <p class="h5">Top-3 Styles</p>
  </div>
</div>
<div class="row">
  <%= render 'table', toplist: @breweries %>
  <%= render 'table', toplist: @beers %>
  <%= render 'table', toplist: @styles %>
</div>

<h3>Top-3 Raters</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>ratings</th>
    </tr>
  </thead>
  <tbody>
    <% @users.top_raters(3).each do |u| %>  
      <tr>
        <td><%= link_to u.username, u %></td>
        <td><%= u.ratings.count %>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Total number of ratings: <%= @ratings.count %></p>
<h3>Recent ratings:</h3>
<ul>
  <% @ratings.recent.each do |rating| %>
    <li><b> <%= rating %></b></br>rated by <%= link_to rating.user.username, rating.user %> at <%= rating.created_at %></li>
  <% end %>
</ul>

<br>

<%= link_to 'List of Breweries', breweries_path %>
<%= link_to 'List of Beers', beers_path %>