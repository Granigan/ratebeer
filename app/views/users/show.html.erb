<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>
<p>
  <% if @user.ratings.empty? %>
    Has not yet rated any beers.
  <% else %>
    Has made <%= pluralize(@user.ratings.count, 'rating') %>. Average rating is <%= @user.average_rating %>.
  <% end %>
</p>
<% if @user.ratings.any? %>
  <h3>Ratings:</h3>
  <ul>
    <% @user.ratings.each do |rating| %>
      <li><%= rating %>
    <% end %>
  </ul>
<% end %>